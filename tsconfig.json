{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "*": ["types/*"],
      "timers": ["node_modules/timers-browserify"],
      "stream": ["node_modules/stream-browserify"]
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"]
  },
  "exclude": ["node_modules"]
}
